function main()

    -- test array creation
    var an_array = [1, 2.7, "fish", false]

    -- test array access
    assert an_array[0] == 1
    assert an_array[1] == 2.7
    assert an_array[2] == "fish"
    assert an_array[3] == false

    -- test array assignment
    an_array[0] = 10
    assert an_array[0] == 10

    -- test array assignment
    an_array[1] = 20
    assert an_array[1] == 20

    -- test array assignment
    an_array[2] = 30
    assert an_array[2] == 30

    -- test array assignment
    an_array[0] = an_array[1] + an_array[2]
    assert an_array[0] == 50

    -- test array assignment
    an_array[0] = an_array[0] * an_array[0]
    assert an_array[0] == 2500

    -- test array concatenation
    var old_array = [1, 2, 3]
    var new_array = old_array + [true, "dog", 6]

    -- test array access with merged array
    assert new_array[0] == 1
    assert new_array[0 + 1] == 2
    assert new_array[2] == 3
    assert new_array[3]
    assert new_array[2 + 2] == "dog"
    assert new_array[10/2] == 6

    -- test array access with variable
    var five = 5
    assert new_array[five] == 6

end