-- this tests setting a variable to a number, string, and boolean
function main()

    -- set v1 to a number
    var v1 = 1
    assertEquals(v1, 1, "v1 should be 1")

    -- set v1 to a string
    v1 = "fish"
    assertEquals(v1, "fish", "v1 should be fish")

    -- set v1 to a boolean
    v1 = true
    assertTrue(v1, "v1 should be true")

 end